<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Title"
        android:layout_width="221dp"
        android:layout_height="88dp"
        android:layout_marginTop="92dp"
        android:fontFamily="serif"
        android:text="Number Guess"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Text_Difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Text_Difficulty"
        android:layout_width="230dp"
        android:layout_height="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Select Difficulty "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="220dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Easy_button"
        android:layout_width="135dp"
        android:layout_height="39dp"
        android:layout_marginBottom="24dp"
        android:text="EASY"
        app:layout_constraintBottom_toTopOf="@+id/Medium_Button"
        app:layout_constraintEnd_toEndOf="@+id/Medium_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Medium_Button"
        app:layout_constraintTop_toBottomOf="@+id/Text_Difficulty"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Medium_Button"
        android:layout_width="137dp"
        android:layout_height="39dp"
        android:layout_marginTop="88dp"
        android:text="MEDIUM"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_Difficulty"
        app:layout_constraintVertical_bias="0.007" />

    <Button
        android:id="@+id/Hard_button"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:layout_marginTop="156dp"
        android:text="HARD"
        app:layout_constraintEnd_toEndOf="@+id/Medium_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Medium_Button"
        app:layout_constraintTop_toBottomOf="@+id/Text_Difficulty" />

    <Button
        android:id="@+id/Speed_button"
        android:layout_width="134dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:text="SPEED"
        app:layout_constraintEnd_toEndOf="@+id/Hard_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Hard_button"
        app:layout_constraintTop_toBottomOf="@+id/Hard_button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="148dp"
        android:layout_height="51dp"
        android:layout_marginTop="100dp"
        android:text="BACK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Speed_button"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/Speed_button"
        app:layout_constraintTop_toBottomOf="@+id/Speed_button"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>